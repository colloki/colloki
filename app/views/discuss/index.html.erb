<ul class="breadcrumb">
  <li class="active">
    <a href="/discuss">Discussion Dashboard</a>
  </li>
</ul>
<div class="row">
  <div class="span12">
    <div class="clearfix">
      <div class="input">
        <textarea class="xxlarge" id="new_post" rows="5"></textarea>
      </div>
    </div>
    <div class="clearfix">
      <br>
      <div class="input">
        <a class="btn">Post</a>
      </div>
    </div>
    <% for activity in @activities %>
      <%= render :partial => "partials/discussion", :locals => { :activity => activity } %>
    <% end %>
  </div>
</div>