<% i = 0 %>
<% for story in stories %>
  <% if i%3 == 0 %>
    <% if i != 0 %>
      </div>
      <hr>
    <% end %>
    <div class="row">
  <% end %>
  <%= render :partial => "partials/story_item", :locals => { :story => story } %>
  <% i += 1 %>
  <% if i == stories.length %>
    </div>
  <% end %>
<% end %>