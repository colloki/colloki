<div class="topicListItem">
  <a href="<%=topical_url(:id => topic.id)%>" title="<%=topic.title%>">
    <h2>
      <%= topic.title %>
    </h2>
  </a>
  <% for story in topic.stories %>
    <div class="storyItemLayout2">
      <h4>
        <%= link_to story.title, story %><br>
      </h4>
      <div class="storyItemContent">
        <%= truncate(strip_tags(story.description), :length => 240, :omission => "...") %>
      </div>
      <div class="storyItemMeta">
        <% if story.kind == Story::Link %>
          Shared by
        <% else %>
          Posted by
        <% end %>
        <%= link_to story.user.login, {
          :controller => "users",
          :action => "show", :id => story.user.id }
        %> •
        <%= time_ago_in_words story.created_at %> ago • <%=link_to story.comments.count.to_s + " comments", story %>
      </div>
    </div>
  <% end %>
</div>