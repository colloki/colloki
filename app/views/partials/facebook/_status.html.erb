
<div class='span3 fb-item fb-status'>
  <div class='fb-image'>
    <% if story.image_url and story.image_url != "" %>
      <%= link_to image_tag(story.image_url, 
          :style => "max-height: 150px;"), 
          story.source_url %>
    <% end %>
  </div>
  <blockquote>
    <% if story.title != "" %>
      <span class="fb-expandable">
        "<%= story.title %>"
      </span>
      <br><br>
    <% end %>
    <% if story.description and story.description != "" %>
      <span class="fb-expandable">
        <%= story.description %>
      </span>
      <br><br>
    <% end %>
    <small>
      by <%= story.source %> 
      <a href='<%= story.source_url %>'>
        <%= time_ago_in_words story.published_at %> ago
      </a> •
      <%= story.fb_likes_count %> likes •
      <%= story.fb_comments_count %> comments
    </small>
  </blockquote>
</div>
