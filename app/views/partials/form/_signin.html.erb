<%= form_tag create_session_path, :class => "well" do %>
  <div class="controls">
    <%= text_field_tag "login", "",
      :placeholder => "Username or Email",
      :class => "span12"
    %>

    <%= password_field_tag 'password', "",
      :placeholder => "Password",
      :class => "span12"
    %>
  </div>

  <div class="controls">
    <label style="font-size: 12px; display: inline-block" class="checkbox">
      <%= check_box_tag "remember_me", "", "" %>
      Remember me Â· <%= link_to "Forgot password?", forgot_password_url %>
    </label>
    <button type="submit" class="btn btn-primary pull-right">
      Log In
    </button>
  </div>

  <%= hidden_field_tag 'redir', @redir %>

  <div class="row-fluid" style="margin-top: 10px">
    <div class="row-fluid" style="margin-bottom: 10px;">
      <h4>or Log in with</h4>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <%= link_to image_tag("sign-in-with-twitter.png", :alt => "Sign in with Twitter"), "auth/twitter" %>
      </div>
      <div class="span6">
        <%= link_to content_tag(:div, "", :id => 'facebook-btn'), "auth/facebook" %>
      </div>
    </div>
  </div>
<% end %>
