<div class="row-fluid topic-body">
  <div class="span8 topic-stories">
  </div>

  <div class="span3 sidebar hidden-phone" style="margin-left: 0">
    <%= render :partial => "partials/topic/sidebar",
      :locals => {
        :stories => stories,
        :tags => tags,
        :topic => (defined? topic) ? topic : nil,
        :new_users => new_users,
        :active_topics => (defined? active_topics) ? active_topics : nil
      }
    %>
  </div>

  <%= will_paginate stories, :renderer => PaginationListLinkRenderer %>
</div>
