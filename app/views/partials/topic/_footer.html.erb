    <% for story in stories %>
      <%= render :partial => "partials/button/like/js", :locals => {:story => story} %>
      <%= render :partial => "partials/button/comment/js", :locals => {:story => story} %>
    <% end %>

    <% if defined? stories_with_photos and stories_with_photos %>
      <% for story in stories_with_photos %>
