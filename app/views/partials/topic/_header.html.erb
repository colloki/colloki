<% Time::DATE_FORMATS[:day_month_and_year] = "%d %B %Y" %>
<% 
  topic_date = topic.day.to_date
  today_date = DateTime.now.to_date
%>

<ul class="breadcrumb">
  <li>
    <% if (topic_date == today_date) %>
      Today
    <% elsif (today_date - topic_date == 1) %>
      Yesterday
    <% else %>
      <%= topic.day.to_formatted_s(:day_month_and_year) %>
    <% end %>
    <span class="divider">/</span>
  </li>
  <li class="active">
    <% if topic.title %>
      [ <%= topic.title %> ]
    <% else %>
      Uncategorized
    <% end %>
  </li>
</ul>

<h3 class="title">
  [ <%= topic.title %> ]
  <a class="btn btn-small has_popover" title="What is [ <%=topic.title%> ]" data-content="It is a 'topic', <em>a group of words</em>, automatically generated from a day's stories.<br><br>These are the top two words occurring most frequently. All of the words are shown on the right." data-delay="0" style="margin-left:10px; display: inline-table; margin-bottom: -2px; padding: 0px 4px !important;font-weight: bold; font-size: 12px; opacity: 0.4" href="#">?</a>
</h3>