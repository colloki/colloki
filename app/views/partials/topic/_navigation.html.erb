<ul class="nav nav-pills">
  <% topics.each_with_index do |topic, i| %>
    <%
      if defined? selected_topic and selected_topic and selected_topic.id == topic.id
        selected = true
      else
        selected = false
      end
    %>
    <%= render :partial => "partials/topic/navigation_link",
        :locals => {
          :id       => i,
          :selected => selected,
          :topic    => topic
        }
    %>
  <% end %>
</ul>
