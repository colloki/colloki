
<ul class="nav nav-pills">
  <% topics.each_with_index do |topic, i| %>
    <% 
      if defined? selected_topic and selected_topic and selected_topic.id == topic.id
        selected = true
      else
        selected = false
      end
    %>
    <%= render :partial => "partials/topic/cloud",
        :locals => {
          :id       => i,
          :selected => selected,
          :topic    => topic,
          :width    => 160,
          :height   => 100
        }
    %>
  <% end %>
</ul>
