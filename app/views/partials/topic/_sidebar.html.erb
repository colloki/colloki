<!-- Topic keywords -->
<% if topic and topic.topic_keywords %>
  <div class="filter">
    <h4>
      [ <%= topic.title %> ]
    </h4>
    <%= render :partial => "partials/topic/cloud", :locals => { :id => 10, :topic => topic } %>
  </div>
<% end %>

<!-- Search -->
<div class="filter-search filter">
  <input type="text" class="search-query" name="query" placeholder="Search" tabIndex="1" />
</div>

<div class="filter filter-kind">
  <ul class="nav nav-stacked nav-pills">
    <!-- News -->
    <li class="active">
      <a title="Posts on local blogs" data-placement="left" class="has-tooltip kind" href="#" data-value="2"><i class='icon-globe icon-white'></i> Blogs</a>
    </li>
    <!-- Chatter -->
    <li>
      <a title="What are people talking about" data-placement="left" class="has-tooltip kind" href="#" data-value="3,4"><i class='icon-comment'></i> Chatter</a>
    </li>
    <!-- Events -->
    <li>
      <a title="What's happening around town" data-placement="left" class="has-tooltip events" href="#"><i class='icon-calendar'></i> Events</a>
    </li>
    <!-- User Shared -->
    <li>
      <a title="Posts by VTS users" data-placement="left" class="has-tooltip kind" href="#" data-value="1"><i class='icon-pencil'></i> User Shared</a>
    </li>
    <% if current_user %>
      <!-- Liked -->
      <li>
        <a title="Stories you liked" data-placement="left" class="has-tooltip liked" href="#" data-value="<%= current_user.id %>"><i class='icon-star'></i> Likes</a>
      </li>
    <% end %>
  </ul>
</div>

<!-- Filter by source -->
<% if @is_frontpage %>
  <div class="filter filter-topic">
    <h4>In the News</h4>
    <div class="row-fluid" style="margin-left: -10px">
      <%= render :partial => "partials/topic/navigation",
        :locals => {
          :topics => @today_topics,
          :story => @story,
          :selected_topic => (defined? @topic) ? @topic : nil
        }
      %>
    </div>
  </div>

  <!-- Sort by Popularity or Date -->
  <div class="filter filter-sort">
    <h4>Sort By</h4>
    <div class="row-fluid">
      <div class="btn-toolbar">
        <div class="btn-group">
          <a class="btn btn-small active sort" data-value="1">Popularity</a>
          <a class="btn btn-small sort" data-value="2">Date</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Filter by date -->
  <div class="filter filter-date">
    <h4>Date</h4>
    <div class="btn-toolbar">
      <div class="btn-group">
        <a class="btn btn-small active date-range" data-value="1">All</a>
        <a class="btn btn-small date-range" data-value="2">Today</a>
        <a class="btn btn-small date-range" data-value="3">Yesterday</a>
        <a class="btn btn-small date-range" data-value="4">This Week</a>
      </div>
    </div>
  </div>

  <div class="filter filter-source">
    <%= render :partial => "partials/topic/filter/source" %>
  </div>
<% end %>

<hr>

<!-- Sign Up Note-->
<% if !logged_in? %>
  <%if @is_frontpage%>
    <h4>What is VTS?</h4>
    <%= render :partial => "partials/description/vts" %>
  <%end%>

  <%= render :partial => "partials/description/signin", :locals => {
    :url => login_url
  } %>
  <hr>
<% end %>

<!-- New users -->
<% if @is_frontpage and new_users and new_users.count != 0 %>
  <h4>Who joined recently</h4>
  <%= render :partial => "partials/new_users", :locals => {:users => new_users} %>
<% end %>

<%= render :partial => 'partials/footer' %>
