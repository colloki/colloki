<%= form_for :user, :url => users_path, :html => { :class => "form-horizontal" } do |f| %>
  <div class="control-group">
    <label>
      Blog Link
    </label>
    <div class="controls">
      <%= f.text_field :link, :class => "span5" %>
    </div>
  </div>
  <div class="control-group">
    <label>
      Description<p class="help-block">optional</p>
    </label>
    <div class="controls">
      <%= f.text_area :description, :class => "span5", :rows => 5 %>
    </div>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">
      Send!
    </button>
  </div>
<% end %>
