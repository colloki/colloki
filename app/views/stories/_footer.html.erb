<%= javascript_tag do %>
  $(document).ready(function(e) {
    var likeView = new LikeView({
      el: $(".like-btn", $(".story")),
      story: gon.story,
      votes: gon.votes,
      current_user: gon.current_user
    });

    var comments = new window.CommentsListView({
      el: $("#comments<%= story.id %>"),
      data: <%= story.comments.to_json(:methods => :user).html_safe %>,
      story_id: gon.story.id,
      user_id: gon.current_user ? gon.current_user.id : -1
    });
  });
<% end %>
