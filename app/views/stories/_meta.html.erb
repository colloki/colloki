<% if story.kind == Story::Post %>
  by <%= link_to story.user.login, story.user %> •
  <% if story.published_at %>
    <%= time_ago_in_words story.published_at %>
  <% else %>
    <%= time_ago_in_words story.created_at %>
  <% end %>
   ago
<% else %>
  <% img = image_tag("http://www.google.com/s2/favicons?domain_url=" + story.source_url,
    :class => "favicon")
  %>
  <%= link_to img, story.source_url %>
  <%= link_to story.source, story.source_url,
    :class => "has-tooltip",
    'data-placement' => "bottom",
    :title => "View original post" %> •
  <%= time_ago_in_words story.published_at %> ago
<% end %>
