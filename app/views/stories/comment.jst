<div class="comment row">
  <div class="span1">
    <img alt="Gravatar" src="http://gravatar.com/avatar/<%= model.user_email_hash %>?size=24">
  </div>
  <div class="span5 comment-body">
    <a href="/users/<%= model.user_id %>"><%= model.user_login %></a>
    <br>
    <%= body %>
    <div class="comment-meta">
      <%= pretty_timestamp %> &nbsp;&nbsp;<a class="btn small-btn error delete-comment" style="cursor: pointer" >delete</a>
    </div>
  </div>
</div>
<hr>