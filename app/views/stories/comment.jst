<div class="comment row-fluid">
  <div class="span1" style="width: 40px">
    <a href="/users/<%=model.user.id%>" title="<%= model.user.login %>" >
      <img alt="Gravatar" src="<%= gravatar_url %>" />
    </a>
  </div>
  <div class="comment-body span6">
    <a href="/users/<%= model.user.id %>"><%= model.user.login %></a>
    <%= model.body %>
    <div class="comment-meta">
      <%= pretty_timestamp %> &nbsp;&nbsp;
      <% if (user_id == model.user.id) { %>
        <a href="#" class="btn btn-mini btn-danger delete-comment">
          Delete
        </a>
      <% } %>
    </div>
  </div>
</div>
<hr>
