<div class="row">
  <div class="span11 story">
    <h2>
      <%= story_title(@story) %>
    </h2>
    <%= render :partial => "partials/story_like", :locals => { :story => @story } %>
    <%= story_meta(@story) %>
    <div class="story-content">
      <% if @story.image.exists? %>
        <div class="story-image">
          <%= image_tag(@story.image.url) %>
        </div>
      <% end %>
      <%= sanitize(@story.description) %>
    </div>
    <br>
    <% if @likers.count != 0 %>
      <h4>
        Liked by
      </h4>
      <%= story_likers(@likers) %>
      <hr>
    <% end %>
    <div id="comments">
      <h4 id="comment-count"></h4>
      <div class="comment-entries"></div>
      <h4>Add a comment</h4>
      <% if logged_in? %>
        <div class="clearfix">
          <%= text_area "comment", "body", :class => "xxlarge", :rows => "6" %>
        </div>
          <%= hidden_field :story, :id, :id => "comment_story_id" %>
        <br>
        <%= submit_tag "Comment", :class => "btn", :id => "add-comment" %>
      <% else %>
      <p>
        <i>Sign up or login to comment</i>
      </p>
      <% end %>
    </div>
  </div>
  <div class="span5">
    <% if @more_stories && @more_stories.count != 0 %>
      <h4>
        More from <strong>
          <% if @story.topic %>
            <%= @story.topic.title %>
          <% else %>
            Uncategorized
          <% end %>
        </strong>
      </h4>
      <% for @a_story in @more_stories %>
        <%= sidebar_story(@a_story) %>
      <% end %>
      <hr>
    <% end %>
    <% if @more_stories_from_source %>
      <h4>More from <%= @story.source %></h4>
      <% for @a_story in @more_stories_from_source %>
        <%= sidebar_story(@a_story) %>
      <% end %>
      <hr>
    <% end %>
    <% if @story.tag_list.count != 0%>
      <h4>Related tags</h4>
      <% if @topic %>
        <%= render :partial => "partials/tag_list", :locals => { :list => @story.tag_list, :topic => @topic.id } %>
      <% end %>
      <hr>
    <% end %>
    <h4>Share</h4>
    <a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal">Tweet</a>
    <script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
      <iframe src="//www.facebook.com/plugins/like.php?href=<%= request.url %>&amp;send=false&amp;layout=button_count&amp;width=50&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:100px; height:21px; display: inline; margin-left: -10px" allowTransparency="true"></iframe>
  </div>
</div>
<script>
  $(document).ready(function(e) {
    var comments = new window.CommentsListView(<%= @comments.to_json.html_safe %>);
  });
</script>