<div id="display" class="panel" title="<%= @story.title %>" selected="true">
  <label>URL:</label> <%= link_to @story.url, @story.url %>
  <p>
    <%=h @story.description %>
  </p>
  <p>
    <label>Submitted by:</label> <%= @story.user.login %><br>
    <%=h votes = @story.votes_for - @story.votes_against %>
    <%=h votes == 1 ? "vote" : "votes" %> | <%=h @story.views %> <%=h @story.views == 1 ? "view": "views" %>
  </p>
  Tags: <%= render :partial => "partials/tag_list", :locals => { :list => @story.tag_list, :topic => @topic.id } %>
</div>
