<div id="middle">
  <h2>Fetch a new story</h2>
  <%= form_tag("/story_fetcher/parse") do %>
  <%= label_tag "Story url:" %>
  <%= text_field_tag :url, "", :size => 100 %>
  <br><br>
  <%= submit_tag("Fetch!") %>
  <% end %>
  <br><br><br>
  <div style="color: #555; font-size: 11px">
    Currently supported: <br>
    <% @source_urls.each_with_index {|url, i| %>
    <%= url %>
    <% if i != @source_urls.count - 1%>
      ,
    <% end %>
    <% } %>
  </div>
</div>