<div class="row-fluid topic-body" style="min-height: 500px">
  <div class="span12">
    <div class="row-fluid" style="margin-top: 5px;">
      <%= render :partial => "topics/type" %>
    </div>
    <div class="row-fluid">
      <div class="span3 sidebar hidden-phone">
        <%= render :partial => "topics/sidebar",
          :locals => {
            :stories => stories,
            :tags => tags,
            :topic => (defined? topic) ? topic : nil,
            :new_users => new_users,
            :active_topics => (defined? active_topics) ? active_topics : nil
          }
        %>
      </div>
      <div class="span9">
        <div class="row-fluid lead topic-header">
          This Week's News
        </div>
        <div class="row-fluid">
          <div class="topic-stories"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render :partial => "topics/footer",
  :locals => {
    :stories => @stories,
    :topic => (defined? topic) ? topic : nil
  }
%>
