<div class="well">
<% if !logged_in? %>
  <div>
    <h3>Virtual Town Square</h3>
    <p class="lead">
      <%= render :partial => "partials/description/vts" %>
      Sign in to post, comment and like stories.
      <br><br>
      <%= link_to('Sign In', login_url, :class => 'btn btn-primary') %>
      <%= link_to('Learn More', about_url, :class => 'btn btn-info') %>
    </p>
  </div>
  <hr>
<% end %>

<% render :partial => "topics/type" %>

<!-- Topic keywords -->
<% if topic and topic.topic_keywords %>
  <div class="filter">
    <h4>
      [ <%= topic.title %> ]
    </h4>
    <%= render :partial => "topics/cloud", :locals => { :id => 10, :topic => topic } %>
  </div>
  <hr>
<% end %>

<% if @is_frontpage %>

  <!-- <%= render :partial => "topics/sort" %> -->

  <!-- Search -->
  <!-- <div class="filter-search well">
    <input type="text" class="search-query" name="query" placeholder="Search" tabIndex="1" />
  </div> -->

  <!-- Sort by Topic -->
  <div class="filter-topic">
    <h4>This Week's Topics</h4>
      <%= render :partial => "topics/navigation",
        :locals => {
          :topics => @today_topics,
          :story => @story,
          :selected_topic => (defined? @topic) ? @topic : nil
        }
      %>
    <hr>
  </div>
  <!-- Filter by date -->
  <div class="filter-date">
    <h4>Date</h4>
    <ul class="nav nav-stacked nav-pills">
      <li class="active">
        <a class="date-range" data-value="4">This Week</a>
      </li>
      <li>
        <a class="date-range" data-value="1">All</a>
      </li>
    </ul>
    <hr>
  </div>

  <!-- Filter by source -->
  <div class="filter-source">
    <h4>Sources</h4>
    <%= render :partial => "topics/source_filter" %>
    <hr>
  </div>
<% end %>

<div>
  <%= render :partial => 'partials/footer' %>
</div>

</div>
