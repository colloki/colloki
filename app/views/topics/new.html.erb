<%=render :partial => "partials/second_order_header", :locals => { :style => "bluegray", :title => "Create A New Topic" }%>

<%= form_for(@topic) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 50 %>
  </p>
  <p>
    Describe the topic in a sentence: <br />
    <%= f.text_field :description, :size => 80 %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', topics_path %>
