<ul class="breadcrumb">
  <li class="active">
    Search Results for '<strong><%= @query %></strong>'
  </li>
</ul>
<div class="row">
  <div class="span9">
    <% if @stories.count != 0 %>
      <%= render :partial => "partials/story_items", :locals => { :stories => @stories } %>
      <%= will_paginate @stories, :renderer => PaginationListLinkRenderer %>
    <% else %>
      Oops - No stories matched your search
    <% end %>
  </div>
  <%= render :partial => "partials/topics_sidebar",
    :locals => { :stories => @stories,
                  :tags => @tags,
                  :activity_items => @activity_items,
                  :new_users => @new_users } %>
</div>