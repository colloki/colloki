<script>
  <% if user %>
  $(document).ready(function(e) {
    var userPosts = new window.StoryListView({
      el: $(".user-posts"),
      current_user: gon.current_user,
      postedBy: gon.user.id,
      emptyMessage: "No posts written yet."
    });

    var likedPosts = new window.StoryListView({
      el: $(".user-likes"),
      current_user: gon.current_user,
      likedBy: gon.user.id,
      emptyMessage: "No stories liked yet."
    });

    $(".posts-tab-link").click(function(e) {
      userPosts.render();
    });

    $(".likes-tab-link").click(function(e) {
      likedPosts.render();
    });

    var followUser = new window.FollowView({
      el: $(".user-follow"),
      user: gon.user,
      current_user: gon.current_user,
      following: gon.following
    });
  });
  <% end %>
</script>
