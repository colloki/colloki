<%=render :partial => "partials/second_order_header", :locals => { :style => "bluegray", :title => "Settings" }%>

<%= form_for(@user) do |f| %>
<%= f.error_messages %>
<h2>Basic</h2>
<table cellspacing="10" class="formTable">

	<tr>
		<td class="fieldLabel"><%= f.label "Username" %></td>
		<td class="fieldValue"><span class="fieldUneditable"><%= @user.login %></span>
			<br><span class="fieldMeta">Slurp! doesn't allow users to change their usernames (yet)</span></td>
	</tr>
	
	<tr>
		<td class="fieldLabel"><%= f.label "Email" %></td>
		<td class="fieldValue"><span class="fieldUneditable"><%= @user.email %></span>
			<br><span class="fieldMeta">Slurp! doesn't allow users to change their email ids (yet).</span></td>
	</tr>
	
	<tr>
		<td class="fieldLabel"><%= f.label "Name" %></td>
		<td class="fieldValue"><%= f.text_field :realname %>
			<br><span class="fieldMeta">Your real name</span></td>
	</tr>	
	<tr>
		<td class="fieldLabel"><%= f.label "Bio" %></td>
		<td class="fieldValue"><%= f.text_field :bio %>
			<br><span class="fieldMeta">A short, one line bio of you.</span></td>	
	</tr>
	<tr>
		<td class="fieldLabel"><%= f.label "Website" %></td>
		<td class="fieldValue"><%= f.text_field :website %>
			<br><span class="fieldMeta">The URL to your website, in case you have one.</span></td>
	</tr>	
	<tr>
		<td class="fieldLabel"><%= f.label "Location" %></td>
		<td class="fieldValue"><%= f.text_field :location %>
			<br><span class="fieldMeta">Where do you live?</span></td>
	</tr>	
	<tr>
		<td class="fieldLabel"></td>
		<td class="fieldValue">
			<div class="buttons">
			<button type="submit" class="positive">
					<%= image_tag "tick.png" %>
			        Update
			</button>
			</div>
		</td>
	</tr>
</table>
<% end %>

<h2>Avatar</h2>
<table cellspacing="10" class="formTable">
	<tr>
		<td class="fieldLabel"></td>
		<td class="fieldValue"><%= gravatar_image_tag(current_user.email) %>
			<br><span class="fieldMeta">Slurp uses your <a href="http://gravatar.com">Gravatar</a> (Globally Recognized Avatar) to represent you on this site.
			<br>
			<a href="http://gravatar.com">Gravatar</a> is a free service to manage your avatar across the web. Setting up a new account takes less than a minute!
			</span></td>
	</tr>
	<tr>
		<td class="fieldLabel"></td>
		<td class="fieldValue">
			<div class="buttons">
			<a href="http://en.gravatar.com/site/signup">
			        Sign up for Gravatar
			</a>
			<br><br>
			<span class="fieldMeta">Remember to use <%= @user.email %> as your email id.</span>
		</td>
	</tr>	
	<tr>
		<td class="fieldLabel"></td>
		<td class="fieldValue">
			<div class="buttons">
			<a href="http://en.gravatar.com/emails/">
			        Update Your Gravatar
			</a>
			</div>
			<br><br>
			<span class="fieldMeta">Changes might take a few minutes to show up on site. If it takes longer, please refresh your browser cache.</span>
		</td>
	</tr>	
</table>

<h2>Places</h2>
<%= form_for(@user) do |f| %>
<table cellspacing="10" class="formTable">
	
	<tr>
		<td class="fieldLabel"><%= f.label "Twitter" %></td>
		<td class="fieldValue"><%= f.text_field :twitter_id %>
			<br><span class="fieldMeta">Your username on <a href="http://twitter.com">Twitter</a>.</span></td>
	</tr>	
	<tr>
		<td class="fieldLabel"><%= f.label "Facebook Profile URL" %></td>
		<td class="fieldValue"><%= f.text_field :facebook_url %>
			<br><span class="fieldMeta">The URL to your profile on <a href="http://facebook.com">Facebook</a>.</span></td>	
	</tr>
	<tr>
		<td class="fieldLabel"><%= f.label "LinkedIn Profile URL" %></td>
		<td class="fieldValue"><%= f.text_field :linkedin_url %>
			<br><span class="fieldMeta">The URL to your <a href="http://linkedin.com">LinkedIn</a> profile.</span></td>
	</tr>	
	<tr>
		<td class="fieldLabel"><%= f.label "Delicious" %></td>
		<td class="fieldValue"><%= f.text_field :delicious_id %>
			<br><span class="fieldMeta">Your username on <a href="http://delicious.com">Delicious</a>.</span></td>
	</tr>	
	<tr>
		<td class="fieldLabel"><%= f.label "FriendFeed" %></td>
		<td class="fieldValue"><%= f.text_field :friendfeed_id %>
			<br><span class="fieldMeta">Your username on <a href="http://friendfeed.com">FriendFeed</a>.</span></td>
	</tr>	
	<tr>
		<td class="fieldLabel"></td>
		<td class="fieldValue">
			<div class="buttons">
			<button type="submit" class="positive">
					<%= image_tag "tick.png" %>
			        Update
			</button>
			</div>
		</td>
	</tr>
<% end %>
</table>

<h2>Other Settings</h2>
<table cellspacing="10" class="formTable">
	<tr>
		<td class="fieldLabel"></td>
		<td class="fieldValue">
			<div class="buttons">
			<a href="<%=change_password_url%>">
					<%= image_tag "password.png" %>
			        Change Password
			</a>
			</div>
		</td>
	</tr>
</table>


